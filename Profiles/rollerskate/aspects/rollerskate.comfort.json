        "very_good": 0.95,
        "good": 0.75,
        "intermediate": 0.5,
        "bad": 0.1
      },
      "surface": {
        "asphalt": 0.7,
        "concrete": 0.7,
        "paving_stones": 0.65,
        "sett": 0.01
      },
      "sidewalk:surface": {
        "asphalt": 0.7,
        "concrete": 0.7,
        "paving_stones": 0.65,
        "sett": 0.01
      }
    }
  }
}